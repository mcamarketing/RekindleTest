# Rex System Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=rex_db
POSTGRES_USER=postgres
# SECURITY: Generate a strong password using: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_PORT=5432

# =============================================================================
# Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
# SECURITY: Generate a strong password using: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# =============================================================================
# API Keys (Third-Party Services)
# =============================================================================

# OpenAI (required for LLM reasoning)
OPENAI_API_KEY=sk-your-openai-api-key

# SendGrid (email delivery)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Twilio (SMS delivery)
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Calendly (calendar booking)
CALENDLY_API_KEY=your-calendly-api-key

# Google Calendar (optional, alternative to Calendly)
GOOGLE_CALENDAR_CREDENTIALS=your-google-calendar-credentials-json

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# JWT Secret (generate using: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_TO_STRONG_SECRET

# API Base URL
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Port Configuration
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# Security & Rate Limiting
# =============================================================================

# Rate limit (requests per minute per user)
RATE_LIMIT_PER_MINUTE=100

# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=30

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================

# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# New Relic (APM)
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Datadog (monitoring)
# DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable LLM reasoning (set to 'false' to use only rules)
ENABLE_LLM_REASONING=true

# Enable A/B testing
ENABLE_AB_TESTING=true

# Enable webhook validation
ENABLE_WEBHOOK_VALIDATION=true

# =============================================================================
# Development-Only Settings
# =============================================================================

# Set to 'true' for local development
# DEV_MODE=false

# Mock external APIs (useful for testing)
# MOCK_EXTERNAL_APIS=false
